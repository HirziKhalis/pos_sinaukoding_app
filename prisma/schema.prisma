generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses Vercel's pooling URL
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses Vercel's direct URL
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         String   @default("CASHIER") // ADMIN, CASHIER
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orders Order[]

  resetToken       String?
  resetTokenExpiry DateTime?
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Int
  stock       Int     @default(0)
  category    String  @default("FOOD") // FOOD, BEVERAGE, DESSERT
  imageUrl    String?
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems OrderItem[]
}

model Order {
  id           String  @id @default(uuid())
  orderNumber  String  @unique
  customerName String
  tableNumber  String?
  orderType    String  @default("DINE_IN")

  subTotal       Int
  tax            Int
  total          Int
  receivedAmount Int
  changeAmount   Int

  createdAt DateTime @default(now())

  cashierId String
  cashier   User   @relation(fields: [cashierId], references: [id])

  items OrderItem[]
}

model OrderItem {
  id       String @id @default(uuid())
  quantity Int
  price    Int // Price at the time of purchase

  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  productId String
  product   Product @relation(fields: [productId], references: [id])
}
